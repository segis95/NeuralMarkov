#Generating the train set

Train_x = np.linspace(-np.pi, np.pi,100)
Train_y = ( 1.0 + np.sin(Train_x))/2.0
#print(Train_y)
plt.plot(Train_x, Train_y,'o')
plt.ylabel('some numbers')
plt.show()